{
  "name": "nestjs-config-extended",
  "version": "1.2.6",
  "description": "Extended Configuration Module for Nest to load environment variables package",
  "author": "Pedro Sodr√©",
  "license": "MIT",
  "url": "https://github.com/pedrosodre/nestjs-config-extended",
  "scripts": {
    "build": "rimraf -rf dist && tsc -p tsconfig.json",
    "lint": "tslint -c tslint.json 'lib/**/*.ts'",
    "format": "prettier --write \"lib/**/*.ts\" \"tests/**/*.ts\"",
    "prepublish:npm": "npm run build",
    "publish:npm": "npm publish --access public",
    "prepublish:next": "npm run build",
    "publish:next": "npm publish --access public --tag next",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --runInBand --coverage",
    "prerelease": "npm run build",
    "release": "npm publish --access=public",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "dotenv": "16.5.0",
    "dotenv-expand": "12.0.2",
    "lodash.get": "4.4.2",
    "lodash.has": "4.5.2",
    "lodash.isfunction": "^3.0.9",
    "node-cron": "^4.0.7",
    "rxjs": "^7.2.0",
    "uuid": "11.1.0"
  },
  "devDependencies": {
    "@nestjs/common": "^11.1.2",
    "@nestjs/core": "^11.1.2",
    "@nestjs/platform-express": "^11.1.2",
    "@nestjs/testing": "^11.1.2",
    "@types/jest": "^29.5.14",
    "@types/lodash.get": "4.4.9",
    "@types/lodash.has": "4.5.9",
    "@types/lodash.isfunction": "^3.0.9",
    "@types/lodash.set": "4.3.9",
    "@types/node": "^22.15.23",
    "@types/node-cron": "^3.0.11",
    "@types/tz-offset": "0.0.3",
    "@types/uuid": "10.0.0",
    "husky": "9.1.7",
    "jest": "^29.7.0",
    "prettier": "3.5.3",
    "reflect-metadata": "0.2.2",
    "rimraf": "6.0.1",
    "semantic-release": "^24.2.5",
    "ts-jest": "29.3.4",
    "tslint": "^5.20.1",
    "typescript": "5.8.3"
  },
  "peerDependencies": {
    "@nestjs/common": "^8.0.0 || ^9.0.0 || ^10.0.0 || ^11.0.0",
    "@nestjs/core": "^8.0.0 || ^9.0.0 || ^10.0.0 || ^11.0.0",
    "reflect-metadata": "^0.1 || ^0.2",
    "rxjs": "^7.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "./lib/**/*.ts"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testEnvironment": "node",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pedrosodre/nestjs-config-extended"
  }
}
